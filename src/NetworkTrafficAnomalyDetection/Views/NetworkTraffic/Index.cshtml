@model IEnumerable<NetworkTrafficAnomalyDetection.Models.NetworkTraffic>

@{
    ViewData["Title"] = "Network Traffic Anomalies";
}

<h2>Network Traffic Anomalies</h2>

<table class="table">
    <thead>
        <tr>
            <th>IP Address</th>
            <th>Port</th>
            <th>Packet Length</th>
            <th>Timestamp</th>
            <th>Anomaly Detected</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IpAddress</td>
                <td>@item.Port</td>
                <td>@item.PacketLength</td>
                <td>@item.Timestamp.ToString("yyyy-MM-dd HH:mm:ss")</td>
                <td>@(item.IsAnomaly ? "Yes" : "No")</td>
            </tr>
        }
    </tbody>
</table>

<h3>Submit Network Traffic for Analysis</h3>

<form method="post" asp-action="Analyze">
    <div class="form-group">
        <label for="IpAddress">IP Address</label>
        <input type="text" name="IpAddress" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="Port">Port</label>
        <input type="number" name="Port" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="PacketLength">Packet Length</label>
        <input type="number" name="PacketLength" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Analyze</button>
</form>
