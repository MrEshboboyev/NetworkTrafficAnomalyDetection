@model IEnumerable<AnomalyDetection.Core.Entities.MLModel>

@{
    ViewData["Title"] = "Model Management";
}

<div class="container">
    <h1 class="my-4">Machine Learning Models</h1>
    
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }
    
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <a href="@Url.Action("Train")" class="btn btn-primary mb-3">Train New Model</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Type</th>
                <th>Created At</th>
                <th>Last Trained</th>
                <th>F1 Score</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.ModelType</td>
                    <td>@item.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                    <td>@item.LastTrainedAt.ToString("yyyy-MM-dd HH:mm:ss") ?? "Not trained yet"</td>
                    <td>@item.F1Score.ToString("P2")</td>
                    <td>
                        <a href="@Url.Action("Evaluate", new { id = item.Id })" class="btn btn-info btn-sm">Evaluate</a>
                        <a href="@Url.Action("Download", new { id = item.Id })" class="btn btn-success btn-sm">Download</a>
                        <form method="post" action="@Url.Action("Delete", new { id = item.Id })" style="display:inline" onsubmit="return confirm('Are you sure you want to delete this model?');">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
